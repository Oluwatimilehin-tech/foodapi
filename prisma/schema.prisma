generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String?
  email      String       @unique
  password   String
  Restaurant Restaurant[]
  Order      Order[]
}

model Restaurant {
  id       Int    @id @default(autoincrement())
  name     String
  location String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
  Food     Food[]
}

model Food {
  id           Int        @id @default(autoincrement())
  name         String
  price        Float
  restaurantId Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  Order        Order[]
}

model Order {
  id     Int  @id @default(autoincrement())
  userId Int
  foodId Int
  user   User @relation(fields: [userId], references: [id])
  food   Food @relation(fields: [foodId], references: [id])
}
